{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [false, "attribute", "app", "camelCase"],
    "component-selector": [false, "element", "app", "kebab-case"],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ]
  }
}
